@model EmpleadoMantDTO
@{
    ViewData["Title"] = "Form Empleado";
    ActionsUI action = ViewBag.ActionsUI as ActionsUI;
}

<link rel="stylesheet" href="~/bootstrap/Mant.css">

<section id="hero" class="d-flex align-items-center">
    <div class="container position-relative text-center" data-aos="zoom-in" data-aos-delay="100">
        <div class="section-title">
            <h2>Gestión de Empleados</h2>
            <p>Gestiona, crea, edita y elimina empleados de manera eficiente</p>
        </div>
    </div>
</section>

<footer id="footer">
    <div class="footer-top">
        <div class="container">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold">@action.ObtenerTitulo("Empleado")</h6>
                </div>
                <div class="card-body">
                    <form asp-action="@action.ObtenerAccion()">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Nombre" class="control-label">Nombre</label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre del empleado" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Apellido" class="control-label">Apellido</label>
                                    <input asp-for="Apellido" class="form-control" placeholder="Apellido del empleado" />
                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Puesto" class="control-label">Puesto</label>
                                    <input asp-for="Puesto" class="form-control" placeholder="Puesto del empleado" />
                                    <span asp-validation-for="Puesto" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Salario" class="control-label">Salario</label>
                                    <input asp-for="Salario" class="form-control" placeholder="Salario del empleado" />
                                    <span asp-validation-for="Salario" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="FechaContratacion" class="control-label">Fecha de Contratación</label>
                                    <input asp-for="FechaContratacion" class="form-control" placeholder="Fecha de contratación" />
                                    <span asp-validation-for="FechaContratacion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Telefono" class="control-label">Teléfono</label>
                                    <input asp-for="Telefono" class="form-control" placeholder="Teléfono del empleado" />
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label">Email</label>
                                    <input asp-for="Email" class="form-control" placeholder="Correo electrónico" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Estado" class="control-label">Estado</label>
                                    <select id="slEstado" class="form-control" asp-for="Estado">
                                        <option value="1">Activo</option>
                                        <option value="0">Inactivo</option>
                                    </select>
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 text-center">
                                <input type="submit" value="@action.ObtenerNombreBoton()" class="btn btn-primary mr-2" />
                                <a asp-action="Index" class="btn btn-dark">Cancelar</a>
                                <span class="text-danger d-block mt-3">@ViewBag.Error</span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</footer>

@section Scripts {
    <script>
        ActionsUI.init('@action.ObtenerAccionJs()');
        $("#slEstado").val('@Model.Estado');
    </script>
    @Html.Partial("_ValidationScriptsPartial")
    @if (action.SiTraerDatos())
    {
        <script>
            $(function () {
                $("form input[name]").trigger("blur");
            });
        </script>
    }
}
