@model CompraManDTOs
@{
    ViewData["Title"] = "Form Compra";
    ActionsUI action = ViewBag.ActionsUI as ActionsUI;
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@action.ObtenerTitulo("Compra")</h6>
    </div>
    <div class="card-body">
        <form asp-action="@action.ObtenerAccion()" onsubmit="return validForm()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="NumeroFactura" class="control-label"></label>
                        <input asp-for="NumeroFactura" class="form-control" />
                        <span asp-validation-for="NumeroFactura" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Fecha" class="control-label"></label>
                        <input asp-for="Fecha" class="form-control" />
                        <span asp-validation-for="Fecha" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Iva" class="control-label"></label>
                        <input asp-for="Iva" class="form-control" readonly />
                        <span asp-validation-for="Iva" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Total" class="control-label"></label>
                        <input asp-for="Total" class="form-control" readonly />
                        <span asp-validation-for="Total" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="IdProveedor" class="control-label"></label>
                        <input asp-for="IdProveedor" class="form-control" />
                        <span asp-validation-for="IdProveedor" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Detalle de Compra -->
            <fieldset class="border p-3 mb-4">
                <legend class="w-auto h5">Detalle</legend>
                <div>
                    <partial name="_DetalleCompra" model="Model.DetalleCompras" />
                </div>
            </fieldset>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="submit" value="@action.ObtenerNombreBoton()" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-dark">Cancelar</a>
                    </div>
                    <span class="text-danger">@ViewBag.Error</span>
                </div>
            </div>
        </form>
    </div>
</div>

<link href="~/lib/jqueryui/jquery-ui.min.css" rel="stylesheet" />
<script src="~/lib/jqueryui/jquery-ui.min.js"></script>

@section Scripts {
    <script>
        ActionsUI.init('@action.ObtenerAccionJs()');

        var eventsValidForm = [];
        function validForm() {
            for (var i = 0; i < eventsValidForm.length; i++) {
                eventsValidForm[i]();
            }
            return true;
        }

        // Función para calcular el total y el IVA
        function calcularTotales() {
            var totalCompra = 0;
            var ivaTotal = 0;
            var ivaPorcentaje = 0.13;  // IVA fijo del 13%

            // Recorrer cada detalle de compra
            $(".detalle-compra").each(function () {
                var precioUnitario = parseFloat($(this).find(".precio-unitario").val()) || 0;
                var cantidad = parseInt($(this).find(".cantidad").val()) || 0;
                var subtotal = precioUnitario * cantidad;

                // Calcular subtotal y asignar
                $(this).find(".subtotal").val(subtotal.toFixed(2));

                // Acumular total
                totalCompra += subtotal;
            });

            // Calcular el IVA
            ivaTotal = totalCompra * ivaPorcentaje;

            // Calcular el total final
            var totalFinal = totalCompra + ivaTotal;

            // Asignar valores calculados a los campos ocultos
            $('input[name="Total"]').val(totalFinal.toFixed(2));
            $('input[name="Iva"]').val(ivaTotal.toFixed(2));
        }

        // Llamar a la función de calcular totales cuando cambie cantidad o precio unitario
        $(document).on('input', '.cantidad, .precio-unitario', function () {
            calcularTotales();
        });

        // Llamar a la función de calcular totales al cargar la página
        $(document).ready(function () {
            calcularTotales();
        });
    </script>
  
}
