@model IEnumerable<InventarioMantDTO>
@{
    ViewData["Title"] = "Buscar Producto";
    ProductoManDTOs modelValid = new ProductoManDTOs();
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Buscar Productos</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Index">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Nombre del Producto</label>
                                <select id="slProducto" class="form-control" name="IdProducto_Inventario_Like">
                                <partial name="SelectProducto" model="ViewBag.productos" />
                                </select>
                            </div> 
                            <td>
                    </td>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Buscar" class="btn btn-primary" />
                        @Html.ActionLink("Ir a Crear", "Mant", new { Id = 0, accion=(int)ActionsUI_Enums.NUEVO }, new { @class = "btn btn-primary" })                       
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Inventario</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="tbInventario" class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdProducto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CantidadDisponible)
                        </th>                        
                        <th>
                            @Html.DisplayNameFor(model => model.CantidadMinima)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CostoUnitario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FechaUltimaCompra)
                        </th>
                        <th >Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.producto.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CantidadDisponible)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CantidadMinima)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CostoUnitario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaUltimaCompra)
                            </td>
                            <td class="botonestabla">
                                @Html.ActionLink("Modificar", "Mant", new { Id = item.Id, Accion=(int)ActionsUI_Enums.MODIFICAR }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Ver", "Mant", new { Id = item.Id,Accion=(int)ActionsUI_Enums.VER}, new { @class = "btn btn-info" })
                                @Html.ActionLink("Eliminar", "Mant", new { Id = item.Id, Accion=(int)ActionsUI_Enums.ELIMINAR }, new { @class = "btn btn-danger" })
                            </td>                          
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>