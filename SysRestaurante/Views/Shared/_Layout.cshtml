<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>SysRestaurante</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/bootstrapp/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/bootstrapp/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/bootstrapp/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/bootstrapp/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/bootstrapp/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/bootstrapp/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/bootstrapp/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/bootstrapp/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/bootstrapp/assets/css/stylo.css" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <link href="~/css/site.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/bootstrap/css/animate.css">
    <link rel="stylesheet" href="~/bootstrap/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/bootstrap/css/themify-icons.css">
    <link rel="stylesheet" href="~/bootstrap/css/flaticon.css">
    <link rel="stylesheet" href="~/bootstrap/css/magnific-popup.css">
    <link rel="stylesheet" href="~/bootstrap/css/slick.css">
    <link rel="stylesheet" href="~/bootstrap/css/gijgo.min.css">
    <link rel="stylesheet" href="~/bootstrap/css/nice-select.css">
    <link rel="stylesheet" href="~/bootstrap/css/all.css">
    <link rel="stylesheet" href="~/bootstrap/css/style.css">
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-cente">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-lg-between">

            <h1 class="logo me-auto me-lg-0"><a>SysRestaurante</a></h1>

            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a class="nav-link scrollto active" href="/">Inicio</a></li>
                    <li><a class="nav-link scrollto" href="/Platillo">Platillos</a></li>
                    <li><a href="@Url.Action("VerPedido", "Pedido")" ">Ver Carrito</a></li>
                        
                    @if (User.IsInRole("administrador"))
                        {
                        <li><a class="nav-link scrollto" href="/Empleado">Empleados</a></li>
                        <li><a class="nav-link scrollto" href="/Proveedor">Proveedores</a></li>
                        <li><a class="nav-link scrollto" href="/Inventario">Inventario</a></li>
                        }

                       @if (User.IsInRole("administrador"))
                        {
                        <li class="dropdown">
                            <a href="#"><span>Gestión</span> <i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <li><a href="/PlatilloProducto">Platillo Producto</a></li>
                                <li><a href="/PlatilloImagen">Platillo Imagen</a></li>
                                <li><a href="/CategoriaPlatillo">Categoría de Platillos</a></li>
                                <li><a href="/CategoriaProducto">Categoría de Productos</a></li>
                                <li><a href="/Compra">Compras</a></li>
                                <li><a href="/Mesas">Mesas</a></li>
                            </ul>
                        </li>
                        }

               
                        <li class="dropdown">
                             @if (User.IsInRole("administrador"))
  {
                            <a href="#"><span>Administración</span> <i class="bi bi-chevron-down"></i></a>
  }
                            <ul>
                                <li><a href="/Usuario">Usuarios</a></li>
                                <li><a href="/Rol">Roles</a></li>
                            </ul>
                        </li>
                     

                       
                    <li>
                        <a class="nav-link scrollto active" href='@Url.Action("Login","Usuario")' onclick="cerrarSesion()">
                            <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i> Cerrar sesión
                        </a>
                    </li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>
        </div>
    </header>

    <main id="main">
        @RenderBody()
    </main>

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/bootstrapp/assets/vendor/aos/aos.js"></script>
    <script src="~/bootstrapp/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/bootstrapp/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/bootstrapp/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/bootstrapp/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/bootstrapp/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/bootstrapp/assets/js/main.js"></script>
   @*  <script src="~/bootstrap/js/jquery-1.12.1.min.js"></script>
    <script src="~/bootstrap/js/popper.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/bootstrap/js/jquery.magnific-popup.js"></script>
    <script src="~/bootstrap/js/swiper.min.js"></script>
    <script src="~/bootstrap/js/masonry.pkgd.js"></script>
    <script src="~/bootstrap/js/owl.carousel.min.js"></script>
    <script src="~/bootstrap/js/slick.min.js"></script>
    <script src="~/bootstrap/js/gijgo.min.js"></script>
    <script src="~/bootstrap/js/jquery.nice-select.min.js"></script>
    <script src="~/bootstrap/js/custom.js"></script> *@

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
